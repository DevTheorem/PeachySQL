{
    "name": "theodorejb/peachy-sql",
    "description": "A small, speedy database abstraction layer for PHP",
    "license": "MIT",
    "keywords": [
        "database",
        "abstraction",
        "mysql",
        "SQL Server",
        "sqlsrv"
    ],
    "authors": [
        {
            "name": "Theodore Brown",
            "email": "theodorejb@outlook.com"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5.10",
        "psalm/plugin-phpunit": "^0.19",
        "ramsey/uuid": "^4.2.3",
        "vimeo/psalm": "^5.26"
    },
    "autoload": {
        "psr-4": {
            "PeachySQL\\": "lib/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PeachySQL\\Test\\": "test/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "analyze": "psalm",
        "test": "phpunit",
        "test-mssql": "phpunit --exclude-group mysql",
        "test-mysql": "phpunit --exclude-group mssql"
    }
}
